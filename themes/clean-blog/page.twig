<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ meta.description|striptags }}">

    <title>{{ meta.title }} - {{ site_title }}</title>
	<!-- [ Social Media Meta Tags ] -->
	<meta content='{{ meta.title }}' property='og:title'/>
	<meta content='article' property='og:type'/>
	<meta content='{{ config.facebook }}' property='article:publisher'/>
	<meta content='{{ config.facebook }}' property='article:author'/>
	<meta content='{{ current_page.url }}' property='og:url'/>
	<meta content='{% if meta.img %}{{ meta.img | url }}{% else %}{{ theme_url }}/img/post-bg.jpg{% endif %}' property='og:image'/>
	<meta content='{{ meta.description|striptags }}' property='og:description'/>
	<meta content='{{ site_title }}' property='og:site_name'/>
	<meta content='en_US' property='og:locale'/>
	<meta content='summary_large_image' name='twitter:card'/>
	<meta content='{{ meta.title }}' name='twitter:title'/>
	<meta content='{{ config.twitter }}' name='twitter:site'/>
	<meta content='{{ config.twitter }}' name='twitter:creator'/>
	<meta content='{{ meta.description|striptags }}' name='twitter:description'/>
	<meta content='{% if meta.img %}{{ meta.img | url }}{% else %}{{ theme_url }}/img/post-bg.jpg{% endif %}' name='twitter:image'/>
    <!-- Bootstrap Core CSS -->
    <link href="{{ theme_url }}/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ theme_url }}/css/clean-blog.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <ul class="nav navbar-custom">
                <li><a href="{{ base_url }}">Home</a></li>
    {% for page in pages if page.title %}
        {% set pageDepth = page.id|split('/')|length %}
        {% if (pageDepth == 2) and (page.id ends with "/index") or (pageDepth == 1) %}
            <li>
                <a href="{{ page.url }}">{{ page.title }}</a>
            </li>
        {% endif %}
    {% endfor %}
</ul>
            </div>

            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: {% if meta.img %} url({{ meta.img }}) {% else %} url('{{ theme_url }}/img/post-bg.jpg'){% endif %};">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ meta.title }}</h1>
                        <h2 class="subheading">{{ meta.description }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {% if paged_pages %}
                    {% for page in pages(current_page.id)|sort_by("time")|reverse %}
                    {% if page.title != 'Government' and page.title != 'Business' and page.title != 'About' and page.title != 'Events' and page.title != 'News' and page.title != 'City Council' %}
                        <div class="post-preview">
                            <a href="{{ page.url }}">
                                <h2 class="post-title">
                                    {{ page.title }}
                                </h2>
                                <h3 class="post-subtitle">
                                    {{ page.description }}
                                </h3>
                            </a>
                            <p class="post-meta">Posted by {{ page.author }} on {{ page.date_formatted }}</p>
                        </div>
                        <hr>
                    {% endif %}
                    {% endfor %}
                {% endif %}
                <!-- Pager -->
                <ul class="pager">
					{% if page_number > 1 %}
					<li class="previous">
                        <a href="{{ base_url }}/{{ page_indicator }}/{{ page_number - 1 }}">&larr; Newer Posts</a>
                    </li>
					{% endif %}
					
					{% if page_number < total_pages %} 
                    <li class="next">
                        <a href="{{ base_url }}/{{ page_indicator }}/{{ page_number + 1 }}">Older Posts &rarr;</a>
                    </li>
					{% endif %}
                </ul>
            </div>
        </div>
        </div>
    </article>

    <hr>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="https://twitter.com/share?text=Read {{ current_page.title }} by {{ current_page.author}}&url={{ current_page.url }}" target="_blank" rel="noopener noreferrer">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{ current_page.url }}" target="_blank" rel="noopener noreferrer">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <span class="text-muted">Twitter: <a href="https://twitter.com/{{ config.twitter }}">@{{ config.twitter }}</a></span>
                    <p class="copyright text-muted">&copy; {{ "now"|date('Y') }} Copyright {{ site_title }}</p>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>
